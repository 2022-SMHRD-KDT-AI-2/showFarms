<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="video.api.livestream.app">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name="video.api.livestream.example.ui.main.salesList.SalesListActivity"
            android:exported="false" />
        <activity
            android:name="video.api.livestream.example.ui.main.LoginActivity"
            android:exported="false" />
        <activity
            android:name="video.api.livestream.example.ui.main.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="video.api.livestream.example.ui.main.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.App.NoActionBar" />
        <activity android:name="video.api.livestream.example.ui.preferences.PreferencesActivity" />
    </application>

</manifest>